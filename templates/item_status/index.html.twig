{% extends 'base.html.twig' %}

{% block title %}ItemStatus index{% endblock %}

{% block body %}
    <h1>ItemStatus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item_status in item_statuses %}
            <tr>
                <td>{{ item_status.id }}</td>
                <td>{{ item_status.name }}</td>
                <td>
                    <a href="{{ path('app_item_status_show', {'id': item_status.id}) }}">show</a>
                    <a href="{{ path('app_item_status_edit', {'id': item_status.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_item_status_new') }}">Create new</a>
{% endblock %}
