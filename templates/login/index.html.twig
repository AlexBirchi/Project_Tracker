<head>
    <title>Login</title>
    <link rel="stylesheet" href="{{asset('css/login.css')}}">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
</head>
<body>

    <div class="main">
        <input type="checkbox" checked="true" id="chk" aria-hidden="true">

        <div class="signup">
            {{ render(path('app_register'))}}
        </div>

        <div class="login">
            <form action="{{ path('app_login') }}" method="post">
                <label for="chk" aria-hidden="true">Login</label>

                {% for message in app.flashes('success') %}
                    <div style="text-align: center; color: lightgreen">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if error %}
                    <div style="text-align: center; color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required=""/>
                <input type="password" id="password" name="_password" placeholder="Password"/>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit">Login</button>
            </form>
        </div>
    </div>
</body>
